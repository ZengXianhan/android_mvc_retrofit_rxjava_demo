<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_gd_search_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/et_gd_search_id_hint"
        android:inputType="number" />

    <Button
        android:id="@+id/btn_gd_get_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_gd_get_data"
        app:layout_constraintTop_toBottomOf="@+id/et_gd_search_id" />

    <ListView
        android:id="@+id/lv_gd_data"
        android:layout_width="377dp"
        android:layout_height="323dp"
        android:layout_margin="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_gd_clear_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_gd_get_data"></ListView>


    <Button
        android:id="@+id/btn_gd_download_data"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="@string/btn_gd_download_data"
        app:layout_constraintBottom_toTopOf="@+id/btn_gd_create_data"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/btn_gd_clear_data"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/btn_gd_clear_data"
        app:layout_constraintBottom_toTopOf="@+id/btn_gd_create_data"
        app:layout_constraintEnd_toStartOf="@+id/btn_gd_download_data"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="@+id/lv_gd_data" />

    <Button
        android:id="@+id/btn_gd_create_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_gd_create_data"
        app:layout_constraintBottom_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>